{
  "name": "genesys-ai-assistant",
  "displayName": "Genesys AI Assistant",
  "description": "Integra√ß√£o direta com seu servidor Genesys AI personalizado",
  "version": "1.0.0",
  "publisher": "genesys-ai",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "assistant",
    "genesys",
    "coding",
    "llama"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "genesys.openChat",
        "title": "üí¨ Chat com Genesys",
        "category": "Genesys"
      },
      {
        "command": "genesys.explainCode",
        "title": "üß† Explicar C√≥digo",
        "category": "Genesys"
      },
      {
        "command": "genesys.reviewCode",
        "title": "üîç Revisar C√≥digo",
        "category": "Genesys"
      },
      {
        "command": "genesys.generateCode",
        "title": "‚ö° Gerar C√≥digo",
        "category": "Genesys"
      },
      {
        "command": "genesys.optimizeCode",
        "title": "üöÄ Otimizar C√≥digo",
        "category": "Genesys"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "genesysChat",
          "name": "üí¨ Genesys AI",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "genesysChat",
        "contents": "ü§ñ Bem-vindo ao Genesys AI!\n\n[üí¨ Iniciar Chat](command:genesys.openChat)\n[üîß Configurar](command:genesys.configure)"
      }
    ],
    "configuration": {
      "title": "Genesys AI",
      "properties": {
        "genesys.serverUrl": {
          "type": "string",
          "default": "https://genesys.webcreations.com.br",
          "description": "URL do servidor Genesys"
        },
        "genesys.timeout": {
          "type": "number",
          "default": 30,
          "description": "Timeout para requisi√ß√µes (segundos)"
        },
        "genesys.autoExplain": {
          "type": "boolean",
          "default": false,
          "description": "Explicar c√≥digo automaticamente ao selecionar"
        },
        "genesys.includeContext": {
          "type": "boolean",
          "default": true,
          "description": "Incluir contexto do arquivo nas conversas"
        }
      }
    },
    "keybindings": [
      {
        "command": "genesys.openChat",
        "key": "ctrl+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "genesys.explainCode",
        "key": "ctrl+shift+e",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "genesys.explainCode",
          "when": "editorHasSelection",
          "group": "genesys@1"
        },
        {
          "command": "genesys.reviewCode",
          "when": "editorHasSelection",
          "group": "genesys@2"
        },
        {
          "command": "genesys.optimizeCode",
          "when": "editorHasSelection",
          "group": "genesys@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
